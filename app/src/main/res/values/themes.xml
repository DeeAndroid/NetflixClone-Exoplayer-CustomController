<resources>
    <!-- Base application theme. -->
    <style name="Theme.PopularMovies" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeNavigation">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/purple_200</item>
        <item name="colorOnSurface">@color/purple_500</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>